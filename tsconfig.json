{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es6", "dom", "es2019"],
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"],
  "types": ["node"]
}
